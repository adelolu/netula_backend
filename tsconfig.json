
{
  "compilerOptions": {
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2016",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "sourceMap": true,
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["src/**/*.json", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",                            
    "dist"                          
  ]
}
